FROM nginx:mainline

LABEL maintainer="Eike Hinderk J체rrens <e.h.juerrens@52north.org>" \
      org.opencontainers.image.authors="J체rrens, Eike Hinderk <e.h.juerrens@52north.org>" \
      org.opencontainers.image.vendor="52째North GmbH"

COPY web/default.k8s.conf /etc/nginx/conf.d/default.conf
COPY EnvDataServer/static /usr/share/nginx/html/EnvDataAPI/static/

RUN chmod +x --recursive /usr/share/nginx/html/EnvDataAPI/

EXPOSE 80

ARG GIT_COMMIT
LABEL org.opencontainers.image.revision="${GIT_COMMIT}"

ARG BUILD_DATE
LABEL org.opencontainers.image.created="${BUILD_DATE}"

ARG VERSION=1.0.0
LABEL org.opencontainers.image.version="${VERSION}"
